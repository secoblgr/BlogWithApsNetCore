@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";  // burada kendi istediğimiz layoutu kullanıyoruz.
}


<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Add Blog</h1>
    <a href="/admin/blogs" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50 mr-2"></i> All Blogs
    </a>
</div>

@* 
   *** burada inputların name atributları ile blog model deki proplar ile aynı değeri vererek eşitledik. 
   * prop name küçük büyük dikkat etmek daha iyi.
*@

<form action="/Admin/CreateBlog" method="post" id="create">
    <label for="blogname">Title</label>
    <div class="form-group">
        <input type="text" class="form-control form-control-user "
               id="blogname" aria-describedby="blogname"
               placeholder="Title" required name="name">  
    </div>
    <label for="blogimageurl">Url</label>

    <div class="form-group">
        <input type="text" class="form-control form-control-user"
               id="blogimageurl" aria-describedby="blogimageurl"
               placeholder="Image Url"
                required name="imageUrl">
    </div>
    <label for="blogtags">Tags</label>

    <div class="form-group">
        <input type="text" class="form-control form-control-user"
               id="blogtags" aria-describedby="blogtags"
               placeholder="Tags"
               required name="tags">
    </div>
    <label for="blogdescription">Description</label>

    <div class="form-group">
        <textarea type="text" rows="5" class="form-control form-control-user"
                  id="blogdescription" placeholder="Message" required name="description"></textarea>
    </div>
    <div class=" mt-3 mb-5 ">
        <button class="btn btn-success btn-icon-split mr-2 " type="submit">
            <span class="icon text-white-50">
                <i class="fas fa-check"></i>
            </span>
            <span class="text">Add</span>
        </button>
    </div>
</form>