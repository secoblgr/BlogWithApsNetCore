@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";  // burada kendi istediğimiz layoutu kullanıyoruz.
}

@model List<Comment>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Comments</h1>
    <a href="/Blog/Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-comment fa-sm text-white-50 mr-2"></i> Add Comment
    </a>
</div>

@{
    if (Model.Count != 0)
    {
        @foreach (var item in Model)
        {
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">@item.Name</h6>
                    <div class="d-flex">
                        <a href="/Blog/Details?id=@item.BlogId" class="mr-2">
                            <button class="btn btn-success" type="button">Go Blog</button>
                        </a>
                        <a href="/Admin/DeleteComment?id=@item.Id">
                            <button class="btn btn-danger" type="button">Delete</button>
                        </a>
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    @item.Message
                </div>
            </div>

        }
    }
    else
    {
        <h5 class="d-flex text-center m-5 text-black justify-content-center align-content-center">
            No Comments Yet
        </h5>
    }
}

