@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";  // burada kendi istediğimiz layoutu kullanıyoruz.
}
@model List<Contact>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Contact Messages</h1>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            @foreach (var item in Model)
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-2 d-flex justify-content-between align-items-center">
                        <h class="font-weight-bolder text-primary mb-0">@item.Name.ToUpper()</h>
                        <div class="d-flex flex-column flex-lg-row align-items-lg-center">
                            <h6 class="text-black mb-0 mr-lg-4">@item.Email</h6>
                            <p class="text-black font-weight-light mb-0">@item.CreatedAt</p>
                        </div>
                    </div>
                    <div class="card-body">
                        @item.Message
                    </div>
                </div>

            }
        </div>
    </div>
</div>