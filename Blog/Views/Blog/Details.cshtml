@model Blog

<div class="mainbar">
    <div class="article">
        <h2><span>@Model.Name</span></h2>
        <div class="clr"></div>
        <p>@Model.Description</p>
        <p>Tagged: <a href="#">@Model.Tags</a></p>
        <div style="white-space: nowrap;">
            <p style="display: inline-block; margin-right: 5px;">
                <a href="#"><strong>Comments @Model.CommentCount</strong></a> 
            </p>
            <p style="display: inline-block; margin-right: 5px;">
                <a href="#"><strong>Like @Model.LikeCount</strong></a> 
            </p>
            <p style="display: inline-block;">
                <a href="#"><strong>View @Model.ViewCount</strong></a> 
            </p>
            <p style="display: inline-block; margin-left:300px; "><span>@Model.PublishDate.ToString("D")</span>
        </div>


    </div>
    <div class="article">
        <h2>User Comments</h2>
        <div class="clr"></div>
        @foreach (var item in ViewBag.Comments)
        {
            <div class="comment">
                <a href="#"><img src="/images/userpic.gif" width="40" height="40" alt="" class="userpic" /></a>
                <p>
                    <a style="color:darkgreen; text-decoration:none;" href="#">@item.Name.ToUpper()</a><br />
                    @item.PublishDate.ToString("D")
                </p>
                <p>@item.Message</p>
            </div>
        }
       
        </div >
        <div class="article">
          <h2><span>Leave a</span> Comment</h2>
          <div class="clr"></div>
        <form action="/Blog/CreateComment" method="post">
            <ol>
                <input  id="blogid" name="blogid" type="hidden" value="@Model.Id"/>
              <li>
                <label for="name">Name</label>
                <input id="name" name="name" class="p-1 w-75" required />
              </li>
              <li>
                <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" class="p-1 w-75" required />
              </li>
              <li>
                <label for="message">Your Message</label>
                    <textarea id="message" name="message" rows="8" cols="50" class="w-75"></textarea>
              </li>
              <li>
                    <button type="submit" class="btn btn-success mb-4 mt-2" style="margin:10px;">Send</button>
                    <div class="clr"></div>
              </li>
            </ol>
          </form>
        </div>
      </div>
}

